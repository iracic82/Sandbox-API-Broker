# API Configuration
BROKER_API_TOKEN=your_track_token_here
BROKER_ADMIN_TOKEN=your_admin_token_here
API_BASE_PATH=/v1

# DynamoDB Configuration
DDB_TABLE_NAME=SandboxPool
DDB_GSI1_NAME=StatusIndex
DDB_GSI2_NAME=TrackIndex
DDB_GSI3_NAME=IdempotencyIndex
DDB_ENDPOINT_URL=http://localhost:8000
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# Sandbox Lifecycle
LAB_DURATION_HOURS=4
GRACE_PERIOD_MINUTES=30
SYNC_INTERVAL_SEC=600
CLEANUP_INTERVAL_SEC=300
CLEANUP_BATCH_SIZE=10
CLEANUP_BATCH_DELAY_SEC=2.0
AUTO_EXPIRY_INTERVAL_SEC=300

# ENG CSP Integration
CSP_BASE_URL=https://csp.infoblox.com/v2
CSP_API_TOKEN=your_csp_token_here
CSP_TIMEOUT_CONNECT_SEC=2
CSP_TIMEOUT_READ_SEC=5

# Concurrency & Resilience
K_CANDIDATES=15
BACKOFF_BASE_MS=100
BACKOFF_MAX_MS=5000
DELETION_RETRY_MAX_ATTEMPTS=3
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SEC=60

# Observability
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_PORT=9090
ENABLE_REQUEST_ID=true
